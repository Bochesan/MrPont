.header
    //height: 105px;
    transition: transform 0.3s;
    z-index: 1000;
    transform: translate(0,0);

    &.headroom--not-top
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;

        &.headroom--unpinned
            transform: translate(0,-100%);

        &.headroom--pinned
            transform: translate(0,0);

    &__body
        position: relative;

    &__head
        background: url('/dist/images/background.jpg') left top repeat;
        background-size: 130px 130px;
        padding-top: rel-size(40px);
        padding-bottom: rel-size(40px);
        border-bottom: 1px solid #3A3A3A;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        z-index: 100;

    &__menu-button
        cursor: pointer;

    &__logo
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);

    &__controls
        display: flex;
        align-items: center;

    &__search
        margin-right: rel-size(46px);
        display: flex;
        align-items: center;
        cursor: pointer;

    &__basket
        display: flex;
        align-items: center;
        cursor: pointer;
        font-family: ff-Quasimodo;
        font-size: rel-size(23px);
        line-height: rel-size(26px);

    &__nav
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        height: calc(100vh - 110px);
        background: #eee;
        transform: translate(0,-100%);
        z-index: 50;
        transition: transform 0.7s, opacity 0.7s;
        background: url('/dist/images/background.jpg') left top repeat;
        background-size: 130px 130px;
        opacity: 0;
        overflow: hidden;

        &.opened
            transform: translate(0,0);
            opacity: 1;

            .header__nav-footer
                opacity: 1;
                transition: opacity 0.7s 1.7s;

            for $n in (1..10)
                .header__nav-item:nth-child({$n})
                    opacity: 1;
                    transition: opacity 0.7s (($n / 10) * 2 + 0.5) * 1s

    &__nav-inner
        position: relative;
        height: 100%;

    &__nav-container
        display: flex;
        overflow-y: auto;
        width: calc(100% + 130px);
        height: 100%;
        padding-right: 130px;
        flex-direction: column;
        align-items: center;
        justify-content: center;

    &__nav-footer
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: rel-size(40px);
        opacity: 0;
        transition: opacity 0.5s 0s;

        a
            font-family: ff-PD;
            font-style: normal;
            font-weight: normal;
            font-size: rel-size(18px);
            line-height: rel-size(34px);
            opacity: 0.5;
            display: inline-block;
            transition: opacity 0.3s;

            &:hover
                opacity: 1;

    &__nav-social

        a
            margin-left: rel-size(40px);

    &__nav-item
        position: relative;
        padding: rel-size(30px) 0;
        opacity: 0;
        transition: opacity 0s 1s;

    for $n in (1..10)
        .header__nav-item:nth-child({$n})
            transition: opacity 0.7s 0s

    &__nav-link
        font-family: ff-Quasimodo;
        font-size: rel-size(83px);
        line-height: rel-size(73px);
        position: relative;
        display: inline-block;

        &:before
            content: attr(data-name);
            font-family: ff-Quasimodo;
            font-size: rel-size(208px);
            line-height: rel-size(182px);
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            z-index: -1;
            white-space: nowrap;
            opacity: 0;
            transition: opacity 0.3s;
            color: transparent;
            -webkit-text-stroke-width: 1px;
            -webkit-text-stroke-color: #fff;

        &:hover

            &:before
                opacity: 0.1;
