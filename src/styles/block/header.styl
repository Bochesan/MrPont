.header
    transition: transform 0.3s;
    z-index: 1000;
    transform: translate(0,0);

    &.headroom--not-top
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;

        & .header__subnav
            transform: translate(0,-100%);

        &.headroom--unpinned
            transform: translate(0,-100%);

        &.headroom--pinned
            transform: translate(0,0);

        &:hover

            +above(768px)

                & .header__subnav
                    transform: translate(0,0%);

    +below(768px)

        .header__subnav
            transform: translate(0,-100%)!important;
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            display: none; /* Hide submenu on mobile */

        &.opened

            .header__subnav
                transform: translate(0,0%)!important;

    &__body
        position: relative;

    &__head
        background: url('/dist/images/background.jpg') left top repeat;
        background-size: 130px 130px;
        padding-top: 50px;
        padding-bottom: 50px;
        height: 120px;
        border-bottom: 1px solid #3A3A3A;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        z-index: 1000;

    &__menu-button
        cursor: pointer;

    &__menu-control
        display: flex;
        align-items: center;

        // .header__search
        //     display: none;
        //     margin-left: rel-size(30px);
        //     transform: translate(0,3px);
        //
        //     +below(480px)
        //         display: block;

    &__logo
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        z-index: 100;

        img
            width: rel-size(60px);
            height: auto;

    &__controls
        display: flex;
        align-items: center;

    &__search
        // margin-right: rel-size(46px);
        // display: flex;
        // align-items: center;
        // cursor: pointer;

        // +below(480px)
        //     display: none;

    &__basket
        display: flex;
        align-items: center;
        cursor: pointer;
        font-family: ff-Quasimodo;
        font-size: rel-size(23px);
        line-height: rel-size(26px);

    &__nav
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        height: 100vh;
        //padding-bottom: rel-size(100px)
        height: calc(100vh - 100px);
        background: #eee;
        transform: translate(0,-100%);
        z-index: 50;
        transition: transform 0.7s, opacity 0.7s;
        background: url('/dist/images/background.jpg') left top repeat;
        background-size: 130px 130px;
        opacity: 0;
        overflow: hidden;

        &.opened
            transform: translate(0,0);
            opacity: 1;

            .header__nav-footer
                opacity: 1;
                transition: opacity 0.7s 1.7s;

            for $n in (1..10)
                .header__nav-item:nth-child({$n})
                    opacity: 1;
                    transition: opacity 0.7s (($n / 10) * 2 + 0.5) * 1s

    &__nav-inner
        position: relative;
        height: 100%;

    &__nav-container
        display: flex;
        overflow-y: auto;
        width: calc(100% + 130px);
        height: 100%;
        padding-right: 130px;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-bottom: rel-size(60px);

    &__nav-footer
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: rel-size(40px);
        opacity: 0;
        transition: opacity 0.5s 0s;

        a
            font-family: ff-PD;
            font-style: normal;
            font-weight: normal;
            font-size: rel-size(18px);
            line-height: rel-size(34px);
            opacity: 0.5;
            display: inline-block;
            transition: opacity 0.3s;

            &:hover
                opacity: 1;

    &__nav-social

        a
            margin-left: rel-size(40px);

    &__nav-item
        position: relative;
        padding: rel-size(15px) 0;
        opacity: 0;
        transition: opacity 0s 1s;

        &:before
            display: none;

    for $n in (1..10)
        .header__nav-item:nth-child({$n})
            transition: opacity 0.7s 0s

    &__nav-link
        font-family: ff-Quasimodo;
        font-size: rel-size(73px);
        line-height: rel-size(63px);
        position: relative;
        display: inline-block;

        +below(480px)
            font-size: rel-size(50px);
            line-height: rel-size(40px);

        &:before
            content: attr(data-name);
            font-family: ff-Quasimodo;
            font-size: rel-size(148px);
            line-height: rel-size(122px);
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            z-index: -1;
            white-space: nowrap;
            opacity: 0;
            transition: opacity 0.3s;
            color: transparent;
            -webkit-text-stroke-width: 1px;
            -webkit-text-stroke-color: #fff;

            +below(768px)
                font-size: rel-size(130px);
                line-height: rel-size(112px);

            +below(480px)
                font-size: rel-size(80px);
                line-height: rel-size(60px);

        &:hover

            &:before
                opacity: 0.1;

    // Второе меню
    &__subnav
        background: url('/dist/images/background.jpg') left top repeat;
        background-size: 130px 130px;
        border-bottom: 1px solid #3A3A3A;
        position: relative;
        transform: translate(0,0%);
        transition: transform 0.5s;
        z-index: 900;

        &.hide
            transform: translate(0,-100%) !important;

    &__subnav-container
        background: url('/dist/images/background.jpg') left top repeat;
        background-size: 130px 130px;
        height: 100px;
        display: flex;
        justify-content: center;
        align-items: center;

        +below(480px)
            height: initial;
            height: auto;
            flex-direction: column;
            align-items: center;

    &__subnav-item
        margin: 0 rel-size(30px);

        +below(768px)
            height: 100%;
            margin: 0 rel-size(10px);

        +below(480px)
            padding-left: 0;
            height: initial;
            height: auto;

        &--submenu
            padding-right: rel-size(30px);
            background: url('/dist/images/dropdown-icon.svg') right center no-repeat;
            background-size: rel-size(20px) rel-size(10px);
            transition: background-position 0.3s 0.55s;
            position: static;

            &:hover

                .header__subnav-submenu
                    opacity: 1;
                    transform: translate(0,0%);

        &:before
            display: none;

        &:hover

            .header__subnav-link:before
                opacity: 1;
                width: 100%;

    &__subnav-link
        font-family: ff-Quasimodo;
        font-size: rel-size(23px);
        line-height: rel-size(26px);
        color: #FEFEFE;
        position: relative;
        display: inline-block;
        padding-top: rel-size(40px);
        padding-bottom: rel-size(40px);

        +below(768px)
            height: 100%;
            display: flex;
            align-items: center;

        +below(480px)
            height: initial;
            height: auto;
            padding-top: rel-size(10px);
            padding-bottom: rel-size(10px);

        &:before
            content: ' ';
            display: block;
            width: 0;
            height: 5px;
            position: absolute;
            top: calc(100% - 5px);
            left: 50%;
            transform: translate(-50%,0);
            z-index: 10;
            opacity: 0;
            //background: linear-gradient(to left, rgba(255,255,255,0.1), rgba(255,255,255,1), rgba(255,255,255,0.1));
            background: #fff;
            transition: 0.3s;

    &__subnav-submenu
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        transform: translate(0,-100%);
        opacity: 0;
        z-index: -10;
        transition: transform 0.5s, opacity 0.7s;

// Меню второго уровня
.submenu
    background: url('/dist/images/background.jpg') left top repeat;
    background-size: 130px 130px;
    padding: rel-size(40px) rel-size(40px);
    border-top: 1px solid #3A3A3A;
    border-bottom: 1px solid #3A3A3A;
    display: flex;
    flex-wrap: wrap;

    +below(480px)
        padding: rel-size(40px) rel-size(20px);

    &__item
        width: 25%;
        margin-bottom: rel-size(40px);
        padding-right: rel-size(20px);

        +below(480px)
            width: 50%
            margin-bottom: rel-size(15px);

    &__link
        font-family: ff-Quasimodo;
        font-size: rel-size(23px);
        line-height: rel-size(26px);
        color: #FEFEFE;
        opacity: 0.8;
        position: relative;
        display: inline-block;


        &:before
            content: ' ';
            width: rel-size(10px);
            height: @width;
            position: absolute;
            top: rel-size(7px);
            right: 100%;
            z-index: 5;
            border: 1px solid #fff;
            opacity: 0.9;
            transform: translate(-100%,0) rotate(45deg);
            //background: url('/dist/images/dropdown-icon.svg') center center no-repeat;
            //background-size: contain;
            transition: opacity 1s, transform 0.5s 2s;
            opacity: 0;

        &:hover
            opacity: 1;

            &:before
                transition: opacity 1.5s, transform 0.7s;
                transform: translate(-100%,0) rotate(-495deg);
                opacity: 1;



