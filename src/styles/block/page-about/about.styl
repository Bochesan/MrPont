.about
    padding-bottom: rel-size(30px);
    display: flex;

    +below(1024px)
        flex-direction: column;

    &__info
        width: 35%;
        margin-right: 10%;

        +below(1024px)
            order: 2;
            width: 100%;
            margin: 0 0 rel-size(50px);

    &__info-title
        font-family: ff-Quasimodo;
        font-size: rel-size(42px);
        line-height: rel-size(43px);
        color: #FEFEFE;
        margin-bottom: rel-size(20px);

    &__info-text
        font-family: ff-PD;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(18px);
        line-height: rel-size(34px);
        font-feature-settings: 'pnum' on, 'lnum' on;
        color: #919191;
        margin-bottom: rel-size(5px);

    &__photo
        width: 55%;

        +below(1024px)
            order: 1;
            width: 100%;
            margin: 0 0 rel-size(50px);

        .swiper-slide

            img
                width: 100%;
                height: auto;
