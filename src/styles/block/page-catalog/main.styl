.catalog
    margin: 0 0 rel-size(80px);
    display: flex;
    flex-direction: column;
    padding-top: 13%;

    &__box
        position: relative;
        width: 40%;
        padding-top: 30%;

        .shadow-name__title
            text-align: left;
            right: initial;
            left: -5%;

        +below(880px)
            width: 45%;
            padding-top: 40%;

        +below(560px)
            padding: 0;
            width: 50%;
            margin-bottom: rel-size(100px);

        &:nth-child(2n)
            align-self: flex-end;

        &:hover

            .catalog__item
                border: 1px solid #fff;

                +below(560px)
                    border: none;

            .catalog__title
                color: #fff;

            .catalog__image

                +below(560px)

                    &:before
                        border: 1px solid #fff;

                img
                    transition: transform 3s ease-out;
                    transform: translate(-50%,-50%) scale(1.1);

    &__item
        display: block;
        border: 1px solid #3A3A3A;
        width: 100%;
        padding: rel-size(40px);
        position: absolute;
        left: 0;
        bottom: 0;
        transition: border 0.5s;

        +below(560px)
            position: static;
            border: none;
            padding: 0;

        &--collection
            padding: 0;

    &__image
        position: relative;
        width: 100%;
        padding-top: 80%;
        margin-top: rel-size(50px);
        margin-bottom: rel-size(50px);

        &--collection
            margin-top: 0;
            overflow: hidden;
            background: #111;

        +below(560px)
            margin-bottom: rel-size(70px);

            &:before
                content: ' ';
                border: 1px solid #3A3A3A;
                width: 100%;
                padding-top: calc(100% + 30px);
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
                transition: border 0.5s;

        img
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: auto;
            height: auto;
            max-width: 100%;
            max-height: 100%;
            transition: transform 0.5s;

    &__title
        font-family: ff-Quasimodo;
        font-size: rel-size(42px);
        line-height: rel-size(43px);
        color: #3A3A3A;
        transition: color 0.5s;

        &--collection
            padding: 0 rel-size(40px) rel-size(40px);

        +below(880px)
            font-size: rel-size(32px);
            line-height: rel-size(33px);

        +below(580px)
            font-size: rel-size(26px);
            line-height: rel-size(27px);
