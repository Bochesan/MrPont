.contacts
    display: flex;
    padding-top: rel-size(30px);
    padding-bottom: rel-size(30px);

    &__info
        flex: 1 1 auto;

    &__info-container
        margin-bottom: rel-size(40px);

    &__info-title
        font-family: ff-Quasimodo;
        font-size: rel-size(42px);
        line-height: rel-size(43px);
        color: #FEFEFE;
        margin-bottom: rel-size(20px);

    &__info-text
        font-family:ff-PD;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(18px);
        line-height: rel-size(34px);
        font-feature-settings: 'pnum' on, 'lnum' on;
        color: #919191;
        margin-bottom: rel-size(5px);

    &__map
        flex: 3 1 100%;
