.detail-catalog
    padding-top: rel-size(50px);
    padding-bottom: rel-size(100px);

.dc-container
    margin: 0;
    // display: flex;
    // flex-wrap: wrap;
    font-size: 0;

    &__box
        //background: #202020;
        display: inline-block;
        border: 1px solid #3A3A3A;
        position: relative;
        padding-top: 25%;
        width: 23%;
        margin: 1%;

        &:first-child
            width: 48%;
            float: left;
            padding-top: 52.1%;

            .dc-container__box-info
                top: auto;
                bottom: 0;
                padding: 0 rel-size(40px);

            .dc-container__box-info-row
                margin-bottom: rel-size(15px);

            &:hover

                &:before
                    display: none;

                .dc-container__box-preview
                    height: 50%;

                .dc-container__box-info
                    height: 50%;
                    padding: rel-size(40px);

        // &:before
        //     content: '';
        //     width: 0%;
        //     height: 0%;
        //     position: absolute;
        //     top: 50%;
        //     left: 50%;
        //     background: white;
        //     z-index: -1;
        //     transition: 0.3s;

        &:hover

            .dc-container__box-info
                height: 60%;
                padding: rel-size(20px);

            // &:before
            //     content: '';
            //     width: 102%;
            //     height: 162%;
            //     position: absolute;
            //     top: -1%;
            //     left: -1%;
            //     background: white;
            //     z-index: -1;


    &__box-preview
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding: rel-size(20px) rel-size(40px);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: 0.75s;

    &__box-title
    &__box-price
        font-family: ff-Quasimodo;
        font-size: rel-size(36px);
        line-height: rel-size(37px);
        color: #FEFEFE;
        height: 5rem;

    &__box-price
        height: 2rem;

    &__box-image
        display: flex;
        align-items: center;
        justify-content: center;
        height: calc(100% - 7rem);

        img
            display: block;
            max-height: 90%;
            max-width: 90%;
            display: block;

    &__box-info
        background: white;
        position: absolute;
        bottom: auto;
        top: 100%;
        left: 0;
        z-index: 10;
        width: 100%;
        height: 0;
        overflow: hidden;
        transition: 0.75s;
        padding: 0 rel-size(20px);

    &__box-info-row
        margin-bottom: rel-size(5px);

    &__box-info-title
    &__box-info-text
        display: inline-block;
        font-family: ff-PD;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(18px);
        line-height: rel-size(34px);
        font-feature-settings: 'pnum' on, 'lnum' on;
        color: #202020;

    &__box-info-title
        margin-right: 5px;
        opacity: 0.6;
