.detail-catalog
    padding-top: rel-size(50px);
    padding-bottom: rel-size(100px);

    +below(768px)
        padding-top: 0;
        padding-bottom: rel-size(100px);

.dc-container
    margin: 0;
    font-size: 0;

    &__box
        display: inline-block;
        border: 1px solid #3A3A3A;
        position: relative;
        padding-top: 25%;
        width: 23%;
        margin: 1%;

        +below(980px)
            width: 48%;
            padding-top: 52.1%;

        +below(768px)
            padding-top: 75%;
            margin: 1.5% 1%;

        +below(359px)
            width: 98%;

        &:before
            content: ' ';
            width: 105%;
            height: 102.5%;
            position: absolute;
            top: -2.5%;
            left: -2.5%;
            background: white;
            opacity: 0;
            transition: 0s;
            z-index: -1;

        &:first-child
            width: 48%;
            float: left;
            padding-top: 52.1%;

            +below(768px)
                width: 98%;
                padding-top: 98%;

            &:before
                display: none;

            .dc-container__box-info
                left: 0%;
                width: 100%;
                min-height: 0;
                height: 0;
                opacity: 1;
                top: auto;
                bottom: 0;
                padding: 0 rel-size(40px);
                transition: 0.75s;

            .dc-container__box-info-row
                margin-bottom: rel-size(15px);

            &:hover

                &:before
                    display: none;

                .dc-container__box-preview
                    height: 50%;

                .dc-container__box-info
                    min-height: 50%;
                    height: 50%;
                    padding: rel-size(40px);

        &:hover
            background: #202020;

            &:before
                opacity: 1;
                transition: 0.5s;

            .dc-container__box-info
                height: auto;
                min-height: 60%;
                opacity: 1;
                padding: rel-size(20px);

                +below(768px)
                    min-height: 40%;
                    padding: rel-size(10px);

    &__box-preview
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding: rel-size(20px) rel-size(40px);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: 0.75s;

        +below(768px)
            padding: rel-size(15px);

    &__box-title
    &__box-price
        font-family: ff-Quasimodo;
        font-size: rel-size(36px);
        line-height: rel-size(37px);
        color: #FEFEFE;
        height: 5rem;

        +below(1560px)
            font-size: rel-size(28px);
            line-height: rel-size(27px);

        +below(1240px)
            font-size: rel-size(22px);
            line-height: rel-size(21px);
            height: 3rem;

    &__box-price
        height: 2rem;

    &__box-image
        display: flex;
        align-items: center;
        justify-content: center;
        height: calc(100% - 7rem);

        +below(1240px)
            height: calc(100% - 5rem);

        img
            display: block;
            max-height: 90%;
            max-width: 90%;
            display: block;

    &__box-info
        background: white;
        position: absolute;
        bottom: auto;
        top: 100%;
        left: -2.5%;
        z-index: 10;
        width: 105%;
        height: 0;
        min-height: 0;
        overflow: hidden;
        transition: 0.75s;
        padding: 0;
        opacity: 0;
        transition: opacity 0.5s, height 0.5s;

        +below(768px)

            .button
                font-size: rel-size(18px);
                line-height: rel-size(17px);
                min-width: 0;
                min-height: 0;
                width: 100%;
                height: auto;
                margin-bottom: 0;
                margin-top: rel-size(10px);

    &__box-info-row
        margin-bottom: rel-size(5px);

    &__box-info-title
    &__box-info-text
        display: inline-block;
        font-family: ff-PD;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(18px);
        line-height: rel-size(34px);
        font-feature-settings: 'pnum' on, 'lnum' on;
        color: #202020;

        +below(768px)
            display: inline;
            font-size: rel-size(14px);
            line-height: rel-size(17px);

    &__box-info-title
        margin-right: 5px;
        opacity: 0.6;
