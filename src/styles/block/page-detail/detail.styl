.detail
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin: 0 0 rel-size(60px) 0;

    +below(768px)
        flex-direction: column;

    &__image
        width: 55%;
        margin-right: 2%;
        border: 1px solid #3A3A3A;
        position: relative;
        min-height: rel-size(840px);

        +below(1280px)
            width: 58%;
            min-height: rel-size(640px);

        +below(768px)
            width: 100%;
            margin-right: 0;
            margin-bottom: rel-size(30px);
            min-height: rel-size(440px);

    &__slider
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

        .swiper-slide
            //min-height: rel-size(840px);
            display: flex;
            align-items: center;
            justify-content: center;

    &__info
        width: 40%;
        min-height: rel-size(840px);
        display: flex;

        +below(1280px)
            min-height: rel-size(640px);

        +below(768px)
            width: 100%;
            min-height: rel-size(440px);

        form
            display: flex;
            flex-direction: column;

    &__title
    &__price
        font-family: ff-Quasimodo;
        font-size: rel-size(42px);
        line-height: rel-size(43px);
        color: #FEFEFE;
        margin-bottom: rel-size(40px);

        +below(768px)
            br
                display: none;

    &__price
        font-size: rel-size(83px);
        line-height: rel-size(73px);
        margin-bottom: rel-size(80px);

    &__size
        margin-bottom: rel-size(60px);

    &__size-title
        font-family: ff-PD;
        font-style: normal;
        font-weight: normal;
        font-size: relsize(18px);
        line-height: rel-size(34px);
        font-feature-settings: 'pnum' on, 'lnum' on;
        color: #919191;
        margin-bottom: rel-size(20px);

    &__size-values
        display: flex;
        align-items: flex-start;
        flex-wrap: wrap;

        label
            margin-right: rel-size(20px);
            margin-bottom: rel-size(20px);
            cursor: pointer;

            &:hover

                .detail__size-value
                    background: rgba(255,255,255,0.1);

        input
            display: none;

            &:checked + .detail__size-value
                background: #fff;
                color: #202020;
                border: 1px solid #fff;

        .detail__size-value
            width: rel-size(55px);
            height: @width;
            border: 1px solid #3A3A3A;
            display: flex;
            align-items: center;
            justify-content: center;
            white-space: nowrap;
            font-family: ff-Quasimodo;
            font-size: rel-size(31px);
            line-height: rel-size(27px);
            color: #FEFEFE;
            transition: background 0.3s, color 0.3s, border 0.3s;
            user-select: none;

    &__button
        margin-right: rel-size(20px);
        margin-bottom: rel-size(20px);

        &:last-child
            margin-right: 0;

    &__more-info
        margin-top: auto;
