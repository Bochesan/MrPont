.hits
    padding-bottom: rel-size(100px);

    +below(768px)
        padding-bottom: 0;

    &__row

        &--sb
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;

            +below(1240px)
                justify-content: space-around;

            +below(880px)
                justify-content: initial;
                flex-direction: column;
                align-items: flex-start;
                padding: 0 4%;

            +below(440px)
                padding: 0;

    &__product
        display: block;

        +below(1240px)
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: rel-size(60px);

        &--1
            transform: translate(-100%,0);

            +below(1440px)
                transform: translate(-50%,0);

            +below(1240px)
                transform: none;

        &--2
            transform: translate(100%,0);

            +below(1440px)
                transform: translate(50%,0);

            +below(1240px)
                transform: none;

            +below(880px)
                align-self: flex-end;

        &:hover

            .hits__product-info
                opacity: 1;

        .shadow-name__title
            top: 0;
            right: 0;
            font-size: 8rem;
            line-height: 8rem;

            +below(880px)
                font-size: 7rem;
                line-height: 7rem;

            +below(768px)
                font-size: 6rem;
                line-height: 6rem;

    &__product-image
        position: relative;
        width: rel-size(300px);
        height: @width;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: rel-size(40px);

        img
            max-width: 60%;
            max-height: 60%;

        &:before
            content: ' ';
            display: block;
            width: 70%;
            height: 70%;
            border: 1px solid #3A3A3A;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%) rotate(45deg);
            z-index: -10;

    &__product-info
        width: rel-size(400px);
        font-family: ff-PD;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(18px);
        line-height: rel-size(34px);
        font-feature-settings: 'pnum' on, 'lnum' on;
        color: #919191;
        transform: translate(-25%,0);
        opacity: 0;
        transition: opacity 0.7s;

        +below(1240px)
            transform: none;

        +below(440px)
            width: 100%;
