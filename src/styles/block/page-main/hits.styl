.hits
    padding-bottom: rel-size(100px);

    &__row

        &--sb
            display: flex;
            justify-content: space-between;

    &__product
        display: block;

        &--1
            transform: translate(-100%,0);

        &--2
            transform: translate(100%,0);

        &:hover

            .hits__product-info
                opacity: 1;

        .shadow-name__title
            top: 0;
            right: 0;
            font-size: 8rem;
            line-height: 8rem;

    &__product-image
        position: relative;
        width: rel-size(300px);
        height: @width;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: rel-size(40px);

        img
            max-width: 60%;
            max-height: 60%;

        &:before
            content: ' ';
            display: block;
            width: 70%;
            height: 70%;
            border: 1px solid #3A3A3A;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%) rotate(45deg);
            z-index: -10;

    &__product-info
        width: rel-size(400px);
        font-family: ff-PD;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(18px);
        line-height: rel-size(34px);
        font-feature-settings: 'pnum' on, 'lnum' on;
        color: #919191;
        transform: translate(-25%,0);
        opacity: 0;
        transition: opacity 0.7s;
