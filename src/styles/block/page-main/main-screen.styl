.main-screen
    height: calc(100vh - 200px);
    // background: url('/dist/images/head-section.png') center center no-repeat;
    background-size: contain;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    &:after
        content: " ";
        position: absolute;
        top: 0
        left: 0;
        width: 100%;
        height: 25%;
        background: linear-gradient(to bottom, rgba(29,29,29,1) 0%, rgba(29,29,29,0) 100%);
        z-index: -1;
    &:before
        content: " ";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 25%;
        background: linear-gradient(to top, rgba(29,29,29,1) 0%, rgba(29,29,29,0) 100%);
        z-index: 0;

    +below(920px)
        background-size: cover;

    &__video
        position: absolute;
        top: 0;
        left: 0;
        object-fit: cover;
        width: 100%
        height: 100%;
        opacity: .4;
        z-index: -1; 
    &__title
        font-family: ff-Quasimodo;
        font-size: rel-size(83px);
        line-height: rel-size(73px);
        display: flex;
        align-items: center;
        text-align: center;
        position: relative;
        z-index: 10;
        opacity: 0;
        animation: opacity 1s 1s linear forwards;

        +below(920px)
            font-size: rel-size(63px);
            line-height: rel-size(53px);

        +below(580px)
            font-size: rel-size(43px);
            line-height: rel-size(33px);

        +below(420px)
            font-size: rel-size(33px);
            line-height: rel-size(23px);

        &:before
            content: ' ';
            width: 250px;
            height: @width;
            border: 1px solid #3A3A3A;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%) rotate(45deg);
            z-index: -10;
            opacity: 0;
            animation: opacity 1s 1.5s linear forwards;

            +below(420px)
                width: 180px;
                height: @width;

    &__info
        position: absolute;
        font-family: ff-PD;
        font-style: normal;
        font-weight: normal;
        font-size: rel-size(18px);
        line-height: rel-size(34px);
        color: #919191;
        transition: color 0.3s;
        font-feature-settings: 'pnum' on, 'lnum' on;
        opacity: 0;
        animation: opacity 1s 1.5s linear forwards;

        &:hover
            color: white;

        &--address
            top: rel-size(40px);
            left: 4%;

        &--worktime
            top: rel-size(40px);
            right: 4%;

        &--phone
            bottom: rel-size(40px);
            left: 4%;

        &--point
            bottom: rel-size(40px);
            right: 4%;

.scroll-icon
    position: absolute;
    width: 10px;
    height: @width;
    left: 50%;
    bottom: 50px;
    transform: translate(-50%,0%);
    animation: scroll 1.5s ease-out infinite;


@keyframes opacity {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

@keyframes scroll {
    0% {
        opacity: 0;
        transform: translate(-50%,0%);
    }
    90% {
        opacity: 1;
        transform: translate(-50%,100%);
    }
    100% {
        opacity: 0;
        transform: translate(-50%,100%);
    }
}
