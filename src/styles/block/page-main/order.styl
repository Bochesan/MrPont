.order
    margin-bottom: rel-size(120px);

    +below(1239px)
        margin-bottom: rel-size(60px);

    &__row
        display: flex;
        flex-wrap: wrap;

    &__gallery
        width: calc(100% - 20rem);

        +below(1239px)
            width: 100%;

    &__slider

        .swiper-slide
            display: flex;
            align-items: center;
            justify-content: center;
            padding-right: 20rem;
            padding-top: rel-size(175px);
            padding-bottom: rel-size(175px);
            position: relative;

            +below(1239px)
                padding: 0 0 rel-size(80px);
                width: 100%;

            .shadow-name

                .shadow-name__title
                    font-size: 8vw;
                    line-height: 8vw;

                    +below(1365px)
                        font-size: 7vw;
                        line-height: 6vw;
                        text-align: left;
                        right: 20%;
                        top: rel-size(-60px);

            .order__slide-image
                position: absolute;
                top: 0;
                right: 0;
                z-index: 10;
                max-width: 60%;
                max-height: 70%;

                +below(1239px)
                    position: static;
                    max-width: 100%;
                    max-height: 400px;

        .order__image
            position: relative;
            width: rel-size(250px);
            height: rel-size(300px);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 20;

            +below(1239px)
                display: none;

            img
                max-width: 100%;
                max-height: 100%;

            &:before
                content: ' ';
                width: calc(100% + 100px);
                height: calc(100% + 100px);
                border: 1px solid #3A3A3A;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
                z-index: -1;

        .swiper-pagination
            padding-right: 20rem;

            +below(1239px)
                padding-right: 0;
