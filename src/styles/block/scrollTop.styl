#scrolltop {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 1000;
    background: #111;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: none;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 15px rgba(255,255,255,.05);
    cursor: pointer;
}
#scrolltop svg {
    height: 50%;
    width: auto;
    fill: #fff;
}
